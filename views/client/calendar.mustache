{{#months}}
    <div class="Calendar month-{{month}}">
        <!-- Calendar title and navigation -->
        <div class="Calendar-nav">
            {{#prevMonth}}
                <a href="#month/{{prevMonth}}" class="button Calendar-nav--prev" name="month/{{prevMonth}}">
                    <span class="fa fa-angle-left Calendar-nav--label"></span>
                    &nbsp
                </a>
            {{/prevMonth}}
            <strong class="Calendar-nav--month">{{monthName}}</strong>
            {{#nextMonth}}
                <a href="#month/{{nextMonth}}" class="button Calendar-nav--next" name="month/{{nextMonth}}">
                    <span class="fa fa-angle-right Calendar-nav--label"></span>
                    &nbsp
                </a>
            {{/nextMonth}}

        </div>

        <!-- Calendar table -->

        <table class="Calendar-dates">
            <thead class="Calendar-dates--header">
            <tr>
                <th class="Calendar-header--dayLabel" data-state="M">Mon</th>
                <th class="Calendar-header--dayLabel" data-state="T">Tue</th>
                <th class="Calendar-header--dayLabel" data-state="W">Wed</th>
                <th class="Calendar-header--dayLabel" data-state="T">Thu</th>
                <th class="Calendar-header--dayLabel" data-state="F">Fri</th>
                <th class="Calendar-header--dayLabel" data-state="S">Sat</th>
                <th class="Calendar-header--dayLabel" data-state="S">Sun</th>
            </tr>
            </thead>
            {{> month_template}}
        </table>
    </div>
{{/months}}
