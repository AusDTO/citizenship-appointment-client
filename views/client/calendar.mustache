{{#months}}
    <div class="Calendar month-{{month}}">
        <!-- Calendar title and navigation -->
        <div class="Calendar-nav">
            {{#prevMonth}}
                <a href="#month/{{prevMonth}}" class="Calendar-nav--prev" aria-label="Previous Month" name="month/{{prevMonth}}" name="month/{{prevMonth}}">
                    <i class="fa fa-angle-left Calendar-nav--label"><span class="hidden">.</span></i>
                </a>
            {{/prevMonth}}
            <strong class="Calendar-nav--month">{{monthName}}</strong>
            {{#nextMonth}}
                <a href="#month/{{nextMonth}}" class="Calendar-nav--next" aria-label="Next Month" name="month/{{nextMonth}}">
                    <i class="fa fa-angle-right Calendar-nav--label"><span class="hidden">.</span></i>
                </a>
            {{/nextMonth}}
        </div>

        <!-- Calendar table -->

        <table class="Calendar-dates">
            <thead class="Calendar-dates--header">
            <tr>
                <th class="Calendar-header--dayLabel" data-state="M" scope="col">Mon</th>
                <th class="Calendar-header--dayLabel" data-state="T" scope="col">Tue</th>
                <th class="Calendar-header--dayLabel" data-state="W" scope="col">Wed</th>
                <th class="Calendar-header--dayLabel" data-state="T" scope="col">Thu</th>
                <th class="Calendar-header--dayLabel" data-state="F" scope="col">Fri</th>
                <th class="Calendar-header--dayLabel" data-state="S" scope="col">Sat</th>
                <th class="Calendar-header--dayLabel" data-state="S" scope="col">Sun</th>
            </tr>
            </thead>
            {{> month_template}}
        </table>
    </div>
{{/months}}
