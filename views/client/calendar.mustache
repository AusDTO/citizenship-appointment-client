{{#months}}
    <div class="BookingCalendar month-{{month}}">
        <!-- Calendar title and navigation -->
        <div class="BookingCalendar-header">
            {{#prevMonth}}
                <a href="#month/{{prevMonth}}" class="button CalendarNav prev">
                    <span class="BookingCalendar-nav--prev fa fa-angle-left"></span>
                    <span class="BookingCalendar-nav--prev button-desc"></span>
                </a>
            {{/prevMonth}}
            <strong class="BookingCalendar-currentMonth">{{monthName}}</strong>
            {{#nextMonth}}
                <a href="#month/{{nextMonth}}" class="button CalendarNav next">
                    <span class="BookingCalendar-nav--next button-desc"></span>
                    <span class="BookingCalendar-nav--next fa fa-angle-right"></span>
                </a>
            {{/nextMonth}}

        </div>

        <!-- Calendar table -->

        <table class="BookingCalendar-dates">
            <thead>
            <tr>
                <th class="abbr" data-state="M">Mon</th>
                <th class="abbr" data-state="T">Tue</th>
                <th class="abbr" data-state="W">Wed</th>
                <th class="abbr" data-state="T">Thu</th>
                <th class="abbr" data-state="F">Fri</th>
                <th class="abbr" data-state="S">Sat</th>
                <th class="abbr" data-state="S">Sun</th>
            </tr>
            </thead>
            {{> month_template}}
        </table>
    </div>
{{/months}}
