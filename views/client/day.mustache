{{#available_times_count}}
<div class="calendar-date{{#bookable}} date-bookable date-{{date}}{{/bookable}}">
    {{#bookable}}
    <a class="date-link date-{{date}}{{#today}} today{{/today}}"
    href="#date/{{ date }}" tabindex="{{dateTabIndex}}" aria-label="{{ ariaDay }}, {{available_times_count}} available timeslots">
    	<div class="date-label" aria-label="{{ ariaDay }}" role="presentation" >{{ day }}</div>
    	<div class="date-available-count" role="presentation" aria-label="{{available_times_count}} available timeslots">{{available_times_count}} available</div>
    </a>
    {{/bookable}}
</div>
{{/available_times_count}}
{{^available_times_count}}
<div class="calendar-date date-unavailable{{#bookable}} date-{{date}}{{/bookable}}" {{^bookable}}aria-hidden="true"{{/bookable}}>
    {{#bookable}}
    <div class="date-link date-{{date}}{{#today}} today{{/today}}" tabindex="-1" aria-label="{{ ariaDay }}, no timeslots available">
        <div class="date-label" aria-label="{{ ariaDay }}" role="presentation">
            {{ day }}
        </div>
    </div>
    {{/bookable}}
</div>
{{/available_times_count}}
