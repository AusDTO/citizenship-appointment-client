<h3>Select a time</h3>
{{^times}}
<div class="times-pleasewait">
  <span class="times-spinner">
    <img src="/images/spinner.gif" alt="Loading spinner" />
  </span>
  Please Wait
</div>
{{/times}}
<div class="appointment-list" role="group">
    {{#times}}
    <div class="appointment-list-item datetime-{{timeClass}}">
        <a class="appointment-link" href="#time/{{datetime}}" tabindex="{{tabindex}}" aria-label="select {{aria_display_time}}">
            <span class="appointment-datetime">{{display_time}}</span>
            <span class="appointment-ampm">{{ampm}}</span>
        </a>
    </div>
    {{/times}}
</div>
