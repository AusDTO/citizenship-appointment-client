{{> html_base_premain_pretitle }}
    <title>Australian Government - Citizenship Appointment Booking</title>
{{> html_base_premain_posttitle}}
<script src="/static/cookies.js" charset="utf-8"></script>

<div class="container">
  <div class="steps-info">Step 1 of 3</div>
  <h1>Book your citizenship appointment</h1>

    {{#error}}
    <div class="error-div" role="alert">
      <img class="error-icon" src="/images/warning.svg" alt="" onerror="this.src='/images/png/warning.png';">
      <span class="error-message">
        Incorrect Client ID and/or Family Name provided.
        Please check your details and try again.
        If the issue persists, please call 1300 792 080
      </span>
    </div>
    {{/error}}

    {{#expired}}
    <div class="error-div" role="alert">
      <img class="error-icon" src="/images/warning.svg" alt="" onerror="this.src='/images/png/warning.png';">
      <span class="error-message">
        Your session has expired.
        This happens when a page has been left open for over 30 minutes.
        All the details you entered have been cleared to keep your information safe.
        Please log in again.
      </span>
    </div>
    {{/expired}}

    <form class="LoginForm" action="/login" method="post" autocomplete="off" id="loginForm">
        <div class="LoginForm-elements">
            <div class="LoginForm-input">
                <label for="clientId">Client ID</label>
                <input class="LoginForm-input--clientId" id="clientId" maxlength="11" type="text" name="username" {{#clientId}}value="{{clientId}}"{{/clientId}} aria-required="true" required pattern="[0-9]{11}" placeholder="Enter your 11 digit client ID" tabindex="1"/>
                <div>
                    <span class="validation-error inactive" id="clientId-required" aria-live="polite" role="alert">Client Id is required</span>
                    <span class="validation-error inactive" id="clientId-pattern" aria-live="polite" role="alert">Client Id should contain 11 digits only</span>
                </div>
            </div>
            <div class="ClientIdHelp">
                <div class="ClientIdHelp-collapsed">
                    <div class="ClientIdHelp-link">
                        <a href="#help" name="nohelp" class="ClientIdHelp-show--link" tabindex="2" aria-label="To find your ClientID number please refer to the correspondence from the Department" >How to find your Client ID</a>
                    </div>
                </div>
                <div class="ClientIdHelp-expanded">
                    <div class="ClientIdHelp-link">
                        <a href="#nohelp" name="help" class="ClientIdHelp-hide--link" tabindex="2">Hide how to find your Client ID</a>
                    </div>
                    <img src="/images/client_id_help.png" class="ClientIdHelp-image" alt="Please find your Client ID number in the correspondence from the Department"/>
                </div>
            </div>
            <script src="/static/scriptselect/login_helpimage.js" charset="utf-8"></script>
            <div class="LoginForm-Secondrow">
                <div class="LoginForm-input">
                    <label for="familyName">Family Name</label>
                    <input id="familyName" type="text" name="familyName" aria-required="true" required maxlength="200" tabindex="3"/>
                    <div>
                        <span class="validation-error inactive" id="familyName-required" aria-live="polite" role="alert">Family name is required</span>
                    </div>
                </div>
                <div class="LoginForm-input">
                    <span class="desktop-only" aria-hidden="true">&nbsp;</span>
                    <button type="submit" class="button with-icon" id="submitLogin" aria-label="Press to log in to the booking system" tabindex="4">
                        <span>Log in</span><img src="/images/angle-right-white.svg" onerror="this.src='/images/png/angle-right-white.png';" class="button-icon" alt =""/>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="/static/scriptselect/login_scriptselect.js" charset="utf-8"></script>
<script src='/analytics_basic.js'></script>
{{> html_base_postmain}}
