{{> premain }}
<main>
    <div class="container main-container">
        <h1>Citizenship appointments</h1>
        <h2 class="steps-info">Step 1 of 3: Log in using your client ID and family name</h2>

        {{#error}}
        <div class="error-div" role="alert">
            <img class="error-icon" src="/images/warning.svg" alt="" onerror="this.src='/images/warning.png';">
            <span class="error-message">
                Incorrect client ID and/or family name provided.
                Please check your details and try again.
                If the issue persists, please call 1300 729 080
            </span>
        </div>
        {{/error}}

        {{#system_error}}
        <div class="error-div" role="alert">
            <img class="error-icon" src="/images/warning.svg" alt="" onerror="this.src='/images/warning.png';">
            <span class="error-message">
                An error occurred. Please try again in a few minutes.
            </span>
        </div>
        {{/system_error }}

        {{#expired}}
        <div class="error-div" role="alert">
            <img class="error-icon" src="/images/warning.svg" alt="" onerror="this.src='/images/warning.png';">
            <span class="error-message">
                Your session has expired.
                This happens when a page has been left open for over 30 minutes.
                All the details you entered have been cleared to keep your information safe.
                Please log in again.
            </span>
        </div>
        {{/expired}}

        <form class="login-form" action="/login" method="post" autocomplete="off" id="loginForm">
            <div class="inline-form-group">
                <div><label for="clientId">
                    Client ID
                </label></div>
                <input autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" id="clientId" maxlength="11" type="text" name="username" {{#clientId}}value="{{clientId}}"{{/clientId}} aria-required="true" required pattern="[0-9]{11}" placeholder="Enter your 11 digit client ID"/>
                <div><span class="validation-error inactive" id="clientId-required" aria-live="polite" role="alert">Client ID is required</span></div>
                <div><span class="validation-error inactive" id="clientId-pattern" aria-live="polite" role="alert">Client ID should contain 11 digits only</span></div>
            </div>

            <![if !IE]>
            <div class="client-id-help">
                <div class="client-id-help-link">
                    <span class="inline-icon-with-text">
                        <a href="#help" name="nohelp" class="client-id-help-show--link">Show how to find your client ID <img class="icon" src="/images/angle-down.svg" alt="" onerror="this.src='/images/angle-down.png';"/></a>
                    </span>
                </div>
                <div class="client-id-help-link hidden">
                    <span class="inline-icon-with-text">
                        <a href="#nohelp" name="help" class="client-id-help-hide--link">Hide how to find your client ID <img class="icon" src="/images/angle-down.svg" alt="" onerror="this.src='/images/angle-down.png';"/></a>
                    </span>
                    <div class="client-id-help-text">
                        <p>
                            The client ID is an eleven digit number that was assigned to you when you lodged your citizenship application.
                        </p>
                        <p>
                            Your client ID would have been included in any correspondence you would have received from the department regarding your citizenship application.
                        </p>
                    </div>
                </div>
            </div>
            <![endif]>
            <!--[if lte IE 8]>
            <div class="client-id-help">
                <div class="client-id-help-text">
                    <p>
                        The client ID is an eleven digit number that was assigned to you when you lodged your citizenship application.
                    </p>
                    <p>
                        Your client ID would have been included in any correspondence you would have received from the department regarding your citizenship application.
                    </p>
                </div>
            </div>
            <![endif]-->


            <div class="inline-form-group">
                <div><label for="familyName">
                    Family name
                </label></div>
                <input id="familyName" autocomplete="off" autocorrect="off" spellcheck="false" type="text" name="familyName" aria-required="true" required maxlength="200"/>
                <div><span class="validation-error inactive" id="familyName-required" aria-live="polite" role="alert">Family name is required</span></div>
            </div>

            <div class="inline-form-group">
                <div><span role="presentation">&nbsp;</span></div>
                <button type="submit" class="button-with-icon" id="submitLogin" aria-label="Press to log in to the booking system">
                    <span>Log in</span><img src="/images/angle-right-white.svg" onerror="this.src='/images/angle-right-white.png';" class="icon" alt =""/>
                </button>
            </div>
        </form>
    </div>
</main>
<script src='/analytics_basic.js'></script>
<script src="/static/scriptselect/login_scriptselect.js" charset="utf-8"></script>
{{> postmain }}
