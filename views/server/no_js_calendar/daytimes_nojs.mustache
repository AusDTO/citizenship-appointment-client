{{> html_base_premain_pretitle }}
    <title>Australian Government - Citizenship Appointment Booking Calendar - Select time</title>
{{> html_base_premain_posttitle}}
<script src="/static/cookies.js" charset="utf-8"></script>

<div class="container calendar-page--main">
    <a href="/logout" class="logout-link">Log out</a>
    <h1>Available appointments</h1>
    <h2 class="steps-info">Step 2 of 3: Select date, then time</h2>

    {{#error}}
    <div class="error-div" role="alert">
        There was an error processing your request. Your appointment was not booked. Please try again.
    </div>
    {{/error}}
    {{#unavailable}}
    <div class="error-div" role="alert">
        Sorry your slot has been taken in the meantime or the department availability has changed. Please select other slot and try again.
    </div>
    {{/unavailable}}

    <div class="Calendar-info">
      {{#current_appointment }}
      <img src="/images/calendar.svg" width="15" onerror="this.src='/images/png/calendar.png';" class="icon" alt ="" role="presentation"/>
      <span class="small-left-padding"><strong class="icon-label">Current appointment:</strong></span>
      <span class="small-left-padding">{{ current_appointment }}</span>
      <br/>
      {{/current_appointment }}
      <div class="Calendar-info--field">
        <img src="/images/map-marker.svg" width="15" onerror="this.src='/images/png/map-marker.png';" class="icon" alt ="" role="presentation"/>
        <span class="small-left-padding"><strong class="icon-label">Location:</strong></span>
        <span class="small-left-padding"><a href="https://www.google.com.au/maps?daddr={{locationURL}}" target="_blank" aria-label="{{ location }} Press to open google maps to see directions">{{ location }}</a></span>
      </div>
    </div>
    <div class="Calendars">
        <div>
            Available times for {{display_date}}
        </div>
        <ul>
        {{#available_times}}
            <li>
                <a href="/calendar/text/{{date}}/{{time}}">
                    {{displayTime}}
                </a>
            </li>
        {{/available_times}}
        </ul>
         <div>
            <a href="/calendar/text">
                Select different date
            </a>
        </div>
    </div>
</div>
<script src="/static/oldJS/calendar_old.js" charset="utf-8"></script>
{{> html_base_postmain }}
